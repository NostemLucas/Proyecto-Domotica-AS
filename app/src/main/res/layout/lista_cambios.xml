<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:background="@drawable/borde_verde"
          android:gravity="center"
          android:orientation="horizontal"
          android:padding="5dp">

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtdia"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/btnredondo"
                android:gravity="center"
                android:hint="Dia"
                android:inputType="number"
                android:textColor="#009688"
                android:textColorHint="#009688" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#009688"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/txtMes"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/btnredondo"
                android:gravity="center"
                android:hint="Mes"
                android:inputType="number"
                android:textColor="#009688"
                android:textColorHint="#009688" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#009688"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/txtAño"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/btnredondo"
                android:gravity="center"
                android:hint="Año"
                android:inputType="number"
                android:textColor="#009688"
                android:textColorHint="#009688" />
         </LinearLayout>

         <ImageButton
             android:id="@+id/imgBuscar"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:background="@drawable/ic_lupa_tur" />

      </LinearLayout>
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center">

      <Button
          android:id="@+id/btnHoy"
          android:layout_width="120dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:backgroundTint="#009688"
          android:text="Hoy"
          app:cornerRadius="20dp" />

      <Button
          android:id="@+id/btnInvertir"
          android:layout_width="120dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:backgroundTint="#009688"
          android:text="Invertir"
          app:cornerRadius="20dp" />

   </LinearLayout>

   <EditText
       android:id="@+id/txtdia2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/btnredondo"
       android:gravity="center"
       android:inputType="number"
       android:text="Registro de Acciones"
       android:textColor="#009688"
       android:textColorHint="#009688"
       android:textStyle="bold" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/lista_cambios"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
       android:padding="10dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />


</LinearLayout>